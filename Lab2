1)Led blinking
#include <reg51.h>
void msdelay(unsigned int);
void main (void){
  while(1){
    P1 = 0x55;
    msdelay(50000);
    P1=0xAA;
    msdelay(50000);
  }
}

void msdelay(unsigned int itime){
    unsigned int i,j;
    for(i=0;i<itime;i++){
      for(j=0;j<1275;j++){
    }
  }
}
----------------------------------------------------------

2. Led Chasing
#include <reg51.h>
void msdelay(unsigned int);
void main (void){
unsigned int z;
  while(1){
    P1=0x80;
    for(z=0;z<9;z++){
    msdelay(50000);
    P1=P1>>1;
    }
  }
}
void msdelay(unsigned int itime){
  unsigned int i,j;
  for(i=0;i<itime;i++){
    for(j=0;j<1275;j++){
  }
 }
}
--------------------------------------------------------

3. Display A to Z Ascii Values
#include <reg51.h>
void msdelay(unsigned int);
void main (void){
  unsigned int z;
  for(z='A';z<='Z';z++){
  msdelay(5000);
  P1=z;
  }
}
void msdelay ( unsigned int itime) {
  unsigned int i,j;
  for(i = 0 ;i < itime ; i++){
    for(j = 0 ; j<1275 ; j++){
    }
  }
}
-----------------------------------------------------------

4. Hex Counter
#include <reg51.h>
void msdelay(unsigned int);
void main (void){
  unsigned int z;
    for(z=0;z<=255;z++){
    msdelay(100);
    P1=z;
  }
}
void msdelay ( unsigned int itime) {
  unsigned int i,j;
  for(i = 0 ;i < itime ; i++){
    for(j = 0 ; j<1275 ; j++){
    }
  }
}
----------------------------------------------------------

5. BCD Counter
#include <reg51.h>
void msdelay(unsigned int);
void main (void){
  unsigned int x,y;
  for(x=0;x<=9;x++){
    for(y=0;y<=9;y++){
    msdelay(5000);
    P1=(x<<4)|ys;
    }
  }
}
void msdelay ( unsigned int itime) {
  unsigned int i,j;
  for(i = 0 ;i < itime ; i++){
    for(j = 0 ; j<1275 ; j++){
    }
  }
}

